
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form action="/Rol/Create" method="post">
    <div class="form">
        <label>Nombre</label>
        <input  name="nombre" value="@Model.nombre" />
    </div>
    
    <span class="text-danger">@Html.ValidationMessage("nombre")</span>
    descripcion <textarea name="descripcion">@Model.descripcion</textarea>
    <span class="text-danger">@Html.ValidationMessage("descripcion")</span>
    condicion <input value="true" type="checkbox" name="condicion"/>
    <button class="btn btn-success btn-block" >Enviar</button>
</form>
