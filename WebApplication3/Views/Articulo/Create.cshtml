@model WebApplication3.Models.Clases.Articulo
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form action="/Articulo/Create" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input type="text" name="nombre" class="form-control" value="@Model.nombre" />
        <span>@Html.ValidationMessage("nombre")</span>
    </div>
    <div class="form-group">
        <label>Código</label>
        <input type="text" class="form-control" name="codigo" value="@Model.codigo" />
        <span>@Html.ValidationMessage("codigo")</span>
    </div>
    <div class="form-group">
        <label>Precioo de venta</label>
        <input type="text" class="form-control" name="precio_venta" value="@Model.precio_venta" />
        <span>@Html.ValidationMessage("precioventa")</span>
    </div>

    <div class="form-group">
        <label>Cantidad</label>
        <input class="form-control" type="text" name="stock" value="@Model.stock" />
        <span>@Html.ValidationMessage("stock")</span>
    </div>

    <div class="form-group">
        <label>Descripción</label>
        <textarea class="form-control" name="descripcion">@Model.descripcion</textarea>

    </div>

    <div class="form-group">
        <label>Categoria</label>
        <select class="form-control" name="idcategoria">
            <option>----</option>
            @foreach (var item in ViewBag.categoria)
            {
                <option ( @Model.idcategoria= =@item.id ?"selected":"") value="@item.id">@item.nombre</option>
            }

        </select>

        <span class="text-danger">@Html.ValidationMessage("idcategoria")</span>
    </div>

    <div class="form-check">
        <input (@Model.condicion? "checked" : "") class="form-check-input" type="checkbox" name="condicion" value="true" />
        <label class="form-check-label">Condicion</label>
        <span>@Html.ValidationMessage("descripcion")</span>
    </div><br />
    <button class="btn btn-primary mb-lg-2">Enviar</button>
</form>