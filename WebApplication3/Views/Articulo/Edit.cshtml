@model WebApplication3.Models.Clases.Articulo
@{
    ViewBag.Title = "Edit";
}

<h2>Editar un producto </h2>

<div class="row">

    <div class="col form-group">
        <label>Id</label>
        <p>@Model.id</p>
    </div>
    <div class="col form-group">
        <label>Categoria</label>
        <p>@Model.categoria.nombre</p>
    </div>
    <div class="col form-group">
        <label>Cantidad</label>
        <p>@Model.stock</p>
    </div>
</div>
<br />
<form action="/Articulo/Edit?id=@Model.id" method="post">
    <input value="@Model.categoria.nombre" hidden name="Categoria.nombre" />
    <input value="@Model.categoria.id" hidden name="Categoria.id" />
    <input value="@Model.stock" hidden name="stock" />
    <input value="@Model.idcategoria" hidden name="idcategoria" />
    <div class="form-group">
        <label>Nombre</label>
        <input type="text" name="nombre" class="form-control" value="@Model.nombre" />
        <span style="color:red">@Html.ValidationMessage("nombre")</span>
    </div>
    <div class="form-group">
        <label>Código</label>
        <input type="text" class="form-control" name="codigo" value="@Model.codigo" />
        <span style="color:red">@Html.ValidationMessage("codigo")</span>
    </div>
    <div class="form-group">
        <label>Precio de venta</label>
        <input type="text" class="form-control" name="precio_venta" value="@Model.precio_venta" />
        <span style="color:red">@Html.ValidationMessage("precioventa")</span>
    </div>

    <div class="form-group">
        <label>Descripción</label>
        <textarea class="form-control" name="descripcion">@Model.descripcion</textarea>
        <span style="color:red">@Html.ValidationMessage("descripcion")</span>
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <input type="checkbox" @(Model.condicion ? "checked" : "") name="condicion" value="true" aria-label="Checkbox for following text input">
            </div>
        </div>
        <input type="text" class="form-control" disabled value="Estado" aria-label="Text input with checkbox">
    </div>

    <br />
    <button class="btn btn-primary mb-lg-2">Enviar</button>
    <a href="/Articulo/Index" class="btn btn-danger mb-lg-2">Cancelar</a>
</form>
