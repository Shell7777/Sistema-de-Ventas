@model IEnumerable<WebApplication3.Models.Clases.Articulo>

@{
    ViewBag.Title = "Articulos";

}

<h2>@ViewBag.Title</h2>
<table class="table table-bordered table-responsive-xl">
    <tr class="bg-warning">

        <th>Código</th>
        <th>Nombre</th>
        <th>Precio Actual</th>
        <th>Stock </th>
        <th>Categoria</th>
        <th>Estado </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio_venta)
            </td>
            <td style="">
                @Html.DisplayFor(modelItem => item.stock)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.categoria.nombre)
            </td>
            <td>
              @(item.condicion?"Activo":"Desactivo")
            </td>
            <td>
                <a href="/Articulo/Edit?id=@item.id">Detalles</a>|
                <a href="/Articulo/Delete?id=@item.id">@(!item.condicion ? "Activar" : "Desactivar")</a>
            </td>
        </tr>
    }

</table>
