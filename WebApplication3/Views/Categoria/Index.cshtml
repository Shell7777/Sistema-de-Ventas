@model IEnumerable<WebApplication3.Models.Clases.Categoria>

@{
    ViewBag.Title = "Index";
    string mensaje = "";
    string claseBtn = "btn btn-info";
}
<h2>Categorias </h2>

<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.condicion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>

        @{
            mensaje = !item.condicion ? "Activar Producto " : "Desactiva Prodcuto";
            claseBtn = !item.condicion ? "btn btn-info" : "btn btn-warning";
        }
    <td>
        @Html.DisplayFor(modelItem => item.nombre)
    </td>
    <td>
        
        <div class="custom-control custom-checkbox">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <input disabled type="checkbox" @(item.condicion ? "checked" : "") value="true" aria-label="Checkbox for following text input">
                </div>
            </div>
        </div>
    </td>
    <td>
        <a class="btn btn-danger" href="/Categoria/Edit?id=@item.id">Editar</a>|
        <a class="@claseBtn" href="/Categoria/Delete?id=@item.id">@mensaje</a>
    </td>
</tr>
    }

</table>
