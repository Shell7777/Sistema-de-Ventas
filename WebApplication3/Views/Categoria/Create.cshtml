@model WebApplication3.Models.Clases.Categoria

@{
    ViewBag.Title = "Crear";
}

<h2>Crear una categoria </h2>
<form action="/Categoria/Create?id=@Model.id" method="post">

    <div class="form-group">
        <label>Nombre</label>
        <input class="form-control" name="nombre" value=@Model.nombre/>
        <span style="color:red">@Html.ValidationMessage("nombre")</span>
    </div>

    <div class="form-group">
        <label>Descripción</label>
        <textarea rows="5" class="form-control" name="descripcion">@Model.descripcion</textarea>
        <span style="color:red">@Html.ValidationMessage("descripcion")</span>
    </div>
    
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <input type="checkbox" @(Model.condicion ? "checked" : "") name="condicion" value="true" aria-label="Checkbox for following text input">
                
            </div>
        </div>
        <input type="text" class="form-control" disabled value="Estado" aria-label="Text input with checkbox">
    </div>

    <br />
    <button class="btn btn-primary mb-lg-2">Enviar</button>
    <a href="/Categoria/Index" class="btn btn-danger mb-lg-2">Cancelar</a>
</form>

