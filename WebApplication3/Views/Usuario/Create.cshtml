@model WebApplication3.Models.Clases.Usuario

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form action="/Usuario/Create" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input class="form-control" name="nombre" value="@Model.nombre" />
        <span class="text-danger">@Html.ValidationMessage("nombre")</span>

    </div>
    <div class="form-group">
        direccion <input class="form-control" name="direccion" value="@Model.direccion" />
        <span>@Html.ValidationMessage("direccion")</span>
    </div>
    <div class="form-group">
        email  <input class="form-control" name="email" value="@Model.email" />
        <span>@Html.ValidationMessage("email")</span>
    </div>
    <div class="form-group">
        num_documento<input class="form-control" name="num_documento" value="@Model.num_documento" />
        <span>@Html.ValidationMessage("num_documento")</span>
    </div>
    <div class="form-group">
        telefono<input name="telefono" value="@Model.telefono" />
        <span>@Html.ValidationMessage("telefono")</span>
    </div>
    <div class="form-group">
        password_salt<input name="password_salt" />
        <span>@Html.ValidationMessage("password_salt")</span>
    </div>
    <div class="form-group">
        password_salt<input name="password_salt"  />
        <span>@Html.ValidationMessage("password_salt")</span>
    </div>
    <div class="form-group">
        rol
        <select name="idrol">
            <option >------------</option>
            @foreach (var item in ViewBag.rol)
            {
                <option @(item.id == Model.idrol?"selected":"") value="@item.id">@item.nombre</option>
            }
        </select>
        <span>@Html.ValidationMessage("idrol")</span>

    </div>  

    <div class="form-check">
        <input @(Model.condicion? "checked" : "" ) class="form-check-input" type="checkbox" name="condicion" value="true" />
        <label class="form-check-label">Condicion</label>
        <span>@Html.ValidationMessage("descripcion")</span>
    </div>







    <button>Enviar</button>
</form>

