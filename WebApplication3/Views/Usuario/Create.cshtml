@model WebApplication3.Models.Clases.Usuario

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form action="/Usuario/Create" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input class="form-control" name="nombre" value="@Model.nombre" />
        <span class="text-danger">@Html.ValidationMessage("nombre")</span>

    </div>
    <div class="form-group">
        <label>Dirección</label> <input class="form-control" name="direccion" value="@Model.direccion" />
        <span>@Html.ValidationMessage("direccion")</span>
    </div>
    <div class="form-group">
        <label>Email</label> <input class="form-control" name="email" value="@Model.email" />
        <span>@Html.ValidationMessage("email")</span>
    </div>
    <div class="form-group">
        <label>Documento</label><input class="form-control" name="num_documento" value="@Model.num_documento" />
        <span>@Html.ValidationMessage("num_documento")</span>
    </div>
    <div class="form-group">
        <label>Teléfono</label><input class="form-control" name="telefono" value="@Model.telefono" />
        <span>@Html.ValidationMessage("telefono")</span>
    </div>
    <div class="form-group">
        <label>Contraseña</label><input class="form-control" name="password_salt" />
        <span>@Html.ValidationMessage("password_salt")</span>
    </div>
    <div class="form-group">
        <label>Ingrese nuevamente la contraseña</label><input class="form-control" />
        <span>@Html.ValidationMessage("password_salt")</span>
    </div>
    <div class="form-group">
        rol
        <select name="idrol" class="custom-select">
            <option>------------</option>
            @foreach (var item in ViewBag.rol)
            {
                <option @(item.id == Model.idrol ? "selected" : "") value="@item.id">@item.nombre</option>
            }
        </select>
        <span>@Html.ValidationMessage("idrol")</span>

    </div>


    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <input type="checkbox" @(Model.condicion ? "checked" : "") name="condicion" value="true" aria-label="Checkbox for following text input">

            </div>
        </div>
        <input type="text" class="form-control" disabled value="Estado" aria-label="Text input with checkbox">
        <span>@Html.ValidationMessage("descripcion")</span>
    </div>







    <button class="btn btn-primary">Enviar</button>
</form>

