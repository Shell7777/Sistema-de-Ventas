            @Html.DisplayFor(modelItem => item.password_salt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.condicion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
